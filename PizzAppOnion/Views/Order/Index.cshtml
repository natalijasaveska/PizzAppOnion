@model IEnumerable<PizzAppOnion.Contracts.ViewModels.Order.OrderViewModel>

@{
    ViewData["Title"] = "View";
}

<h1>View</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PizzaId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PizzaId)
            </td>
            <td>
                 <a asp-controller="Order" asp-action="Edit" asp-route-id=@item.Id>Edit</a>
                 <a asp-controller="Order" asp-action="Details" asp-route-id=@item.Id>Details</a>
                <a asp-controller="Order" asp-action="Delete" asp-route-id=@item.Id>Delete</a>
                
            </td>
        </tr>
}
    </tbody>
</table>
